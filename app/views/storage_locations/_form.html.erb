<%= simple_form_for(@storage_location, remote: true) do |f| %> 
  <%= f.error_notification %>
  <div class="erro" style="display: none;"></div>

  <div class="form-inputs">
    <%= f.input :name, label: "Nome" %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Salvar" %>
  </div>
<% end %>
