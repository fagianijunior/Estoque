<% if @storage_location.errors.any? -%>
	$(".flash").hide(300);
	$(".erro").hide(300);
	$(".erro").html("<%= escape_javascript('Houve um erro ao tentar adicionar o local') %>");
	$(".erro").show(300);
<% else -%>
	$(".erro").hide(300);
	$(".flash").fadeOut(200);
	$(".flash").html("<%= escape_javascript(flash[:notice]) %>");
	$(".flash").fadeIn(200);
	$(":input[type='text']").val("");

	$("#storages_list").fadeOut(200);
	$("#storages_list").html("<%= escape_javascript( render(partial: 'storage_locations')) %>");
	$("#storages_list").fadeIn(200);
<% end -%>

