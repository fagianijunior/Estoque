<% if @material.errors.any? -%>
  $(".flash").hide(300);
  $(".erro").html("<%= escape_javascript('Houve um erro ao tentar atualizar o registro')%>");
  $(".erro").show(300);
<% else -%>
  $(".erro").hide(300);
  $(".flash").html("<%= escape_javascript(flash[:notice])%>");
  $(".flash").show(300);
  $(":input:not(input[type=submit])").val("");
  $("#materials_list").hide(300);
  $("#materials_list").html("<%= escape_javascript( render(partial: "materials") ) %>");
  $("#materials_list").show(300);
<% end -%>