<table>
  <tr>
    <th>Name</th>
    <th>Unit</th>
    <th></th>
    <th></th>
  </tr>

<% @materials.each do |material| %>
  <tr>
    <td><%= material.name %></td>
    <td><%= material.unit.name %></td>
    <td><%= link_to 'Edit', edit_material_path(material), remote: true %></td>
    <td><%= link_to 'Destroy', material, confirm: 'Are you sure?', method: :delete, remote: true %></td>
  </tr>
<% end %>
</table>