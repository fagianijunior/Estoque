<table>
  <tr>
    <th>Nome</th>
    <th>Unidade</th>
    <th></th>
    <th></th>
  </tr>

<% @materials.each do |material| %>
  <tr>
    <td><%= material.name %></td>
    <td><%= material.unit.name %></td>
    <td><%= link_to 'Editar', edit_material_path(material), remote: true %></td>
    <td><%= link_to 'Deletar', material, confirm: 'Tem certeza?', method: :delete, remote: true %></td>
  </tr>
<% end %>
</table>