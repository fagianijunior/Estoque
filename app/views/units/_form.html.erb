<%= simple_form_for(@unit, remote: true) do |f| %>
  <%= f.error_notification %>
  <div class="erro" style="display: none;"></div>

  <div class="form-inputs">
    <%= f.input :name, label: "Nome", hint: "informe o nome da unidade" %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Salvar" %>
  </div>
<% end %>
