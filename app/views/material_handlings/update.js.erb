<% if @material_handling.errors.any? -%>
  $(".flash").hide(300);
  $(".erro").html("<%= escape_javascript('Houve um erro ao tentar atualizar o registro')%>");
  $(".erro").show(300);
<% else -%>
  $(".erro").hide(300);
  $(".flash").html("<%= escape_javascript(flash[:notice])%>");
  $(".flash").show(300);
  $(":input:not(input[type=submit])").val("");

  $("#material_handlings_list").fadeOut(200);
  $("#material_handlings_list").html("<%= escape_javascript( render(partial: "material_handlings") ) %>");
  $("#material_handlings_list").fadeIn(200);
<% end -%>